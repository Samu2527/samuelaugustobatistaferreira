    <title>Javascript</title>
   </head>   
     <body>

      <script>

        var nome=window.prompt("Digite seu nome")
        document.write(nome)
        window.alert(nome)
      
        var numero=Number.parseInt(window.prompt ("digite seu numero:"))
        document.write (numero,'<br>')

        var numero1= Number.parseInt(window.prompt ("digite seu valor:"))
        document.write (numero1)

        var soma=numero+numero1
        document.write (soma) 

      </script> 
